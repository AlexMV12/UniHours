<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Main scene -->
<VBox fx:id="mainWindow" fx:controller="main.ControllerMainScene" xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20">
    <Label text="Welcome in UniHours!"/>
    <Label text="What do you want to do?"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="buttonNewTable" text="Insert new table" onAction="#createNewTable"/>
        <Button fx:id="buttonShowTable" text="Show current table" onAction="#showTable"/>
    </HBox>

</VBox>


